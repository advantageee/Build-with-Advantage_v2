<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AdvantageAI</title>
    <link rel="icon" href="@Url.Content("~/images/favicon.ico")" type="image/x-icon" />
    <!-- Load bundled CSS -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Images/logo.png" alt="AdvantageAI Logo" style="height: 100%;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("UploadDocument", "Home")">Upload Document</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("GenerateCodeSnippet", "Home")">Generate Code Snippet</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("GenerateImage", "Home")">Generate Image</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("GenerateImageCaption", "Home")">Generate Image Caption</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Chat", "Home")">Chat</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-4">
        <p>&copy; @DateTime.Now.Year - AdvantageAI</p>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @RenderSection("Scripts", required: false)
</body>
</html>
